<% provide(:title, "New Giveaway") %>
<h1>Create a New Secret Santa Giveaway</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@giveaway, url: new_give_away_path) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :start, "Start date (optional)" %>
      <%= f.date_field :start, class: 'form-control' %>

      <%= f.label :end, "Close date (optional)" %>
      <%= f.date_field :end, class: 'form-control' %>

      <%= f.submit "Create my Giveaway", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>

