<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @owner %>
      <h1><%= @owner.name %></h1>
      <span><%= link_to "view my profile", @owner %></span>
      <span><b>Participants:</b> <%= @users.count %></span>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            
            <%= gravatar_for (user) %>

          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>