<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @owner %>
      <h1><%= @owner.name %></h1>
      <span><%= link_to "view my profile", @owner %></span>
      <span><b>Participants:</b> <%= @users.count %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <%= will_paginate @users %>
      <ul class="users participating">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>