<% provide(:title, "New Exchange") %>
<h1>Create a New Secret Santa Exchange</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@exchange, url: new_exchange_path) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= label_tag :enrollment_deadline, "Enrollment period:" %>
      <% #TODO: cut this into a loop or something simpler %>

      <div class="form-inline">
          <%= render 'duration_chooser', name: 'enrollment'  %>
      </div>
      <% #f.label :end, "Close date (optional)" %>
      <% #f.date_field :end, class: 'form-control' %>

      <%= f.submit "Create my Exchange", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>