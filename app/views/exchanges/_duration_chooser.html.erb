<% durations = [[:weeks,(0..4)],[:days,(0..6)],[:hours,(0..23)]] %>
<% durations.each do |i| %>
            <%= label_tag name,i[0], class: 'input-group' do %>
            		<%= number_field name,i[0], in: i[1], class: 'form-control', id: i[0] %>
            		<span class="input-group-addon"><%= i[0] %></span>
            <% end %>
<% end %>