  <% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

    </section>
  </aside>
</div>

<div class="row">
  <section class="user_info">
    <h2>My GiveAways</h2>
  </section>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End Date</th>
      <th>Participants</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @give_aways.each do |ga| %>
      <tr>
        <td><%= ga.name %></td>
        <td><%= ga.start %></td>
        <td><%= ga.end %></td>
        <td><%= link_to 'Show', ga %></td>
        <td><%= link_to 'Edit', edit_give_away_path(ga) %></td>
        <td><%= link_to 'Destroy', ga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

