  <% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

    </section>
  </aside>
</div>

<div class="row">
  <section class="user_info">
    <h2>My Exchanges</h2>
  </section>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End Date</th>
      <th>Participants</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="album text-muted">
    <div class="container">
      <div class="row">
        <% @exchanges.each do |ex| %>
          <div class="card">
            <%= link_to (image_tag "thumbnail.png", alt: ex.name), controller: :exchanges, action: "show", id: ex %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</table>

